<%- include('header.ejs') %>
<main class="mw">
    <h2>THE BLOG</h2>
    <h3>All blog posts </h3>
    <ul class="lists">
        <% if(posts.length == 0){ %>
            <li> 등록된 리스트가 없습니다.</li>
        <% } else { %>
            <% posts.map(post => { %>
                <li class="card">
                <p hidden>${post._id}</p>
                <div class="imgArea">
                    <% if(post.postImgPath == null){ %>
                        <img src="/noimg.png" alt="이미지없음">
                    <% } else { %>
                        <img src="<%= post.postImgPath %>" alt="<%= post.title %>">
                    <% } %>
                </div>
                <div class="info">
                    <p><span class="user">작성자</span> / <span class="createDate"><%= post.createAtDate %></span></p>
                    <h4 class="title"><%= post.title %></h4>
                    <p class="desc"><%= post.content %></p>
                </div>
                <a class="more" href="/detail/<%= post._id %>">자세히보기</a>
            </li>
        <% }).join('') %>
    <% } %>
    </ul>
</main>
<%- include('footer.ejs') %>